# Firebase App Hosting Configuration
# This configures Firebase App Hosting for the LeadFlow application

# Runtime configuration
runConfig:
  # Use Cloud Run for scalable hosting
  minInstances: 0
  maxInstances: 10
  memory: 2Gi
  cpu: 1
  timeoutSeconds: 300

# Build configuration for Next.js
build:
  commands:
    - npm ci
    - npm run build
  
  # Output directory for Next.js standalone build
  outputDir: .next

# Environment variables for production
env:
  NODE_ENV: production
  NEXT_PUBLIC_DEPLOY_TARGET: app-hosting
  NEXT_PUBLIC_STATIC_EXPORT: false
